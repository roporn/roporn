<!doctype html>
<html lang="en">
  <head>
    <%- include partials/index-metaheaders.ejs %>
    <%- include partials/resources.ejs %>
  </head>
  <body>
    <%- include('partials/header', { selectedPage: categoryName }) %>

    <!-- section -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">
          <div class="col-md-12">
            <div class="section-title">
              <h2 class="featured-videos-title"><%= categoryName %></h2>
            </div>
          </div>

          <!-- post -->
          <% videos.sort((a,b) => +moment(b.date, 'DD/MM/YYYY') - +moment(a.date, 'DD/MM/YYYY')).map((video) => { %>
          <div class="col-md-6">
            <div class="post post-thumb">
              <a class="post-img" href="<%= video.url %>">
                <img src="<%= video.thumbnailUrl %>" alt="Article Cover Photo" />
              </a>
              <div class="post-body">
                <div class="post-meta">
                  <span class="video-length"><%= moment(video.date, 'DD/MM/YYYY').format('MMMM DD, YYYY') %></span>
                </div>
                <h3 class="post-title">
                  <a href="<%= video.url %>">
                    <%= video.title %>
                  </a>
                </h3>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <!-- /row -->
      </div>
      <!-- /container -->

    <%- include('partials/footer', { type: 'index' }) %>
  </body>
</html>
